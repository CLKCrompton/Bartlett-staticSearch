<?xml version="1.0" encoding="UTF-8"?>
<config xmlns="http://hcmc.uvic.ca/ns/staticSearch">
    <params>
        <baseDir>.</baseDir>
        <collectionDir>../graves/products/site</collectionDir>
        <tempDir>temp</tempDir>
        <outDir>site/js/</outDir>
        <recurse>false</recurse>
        <phrasalSearch>true</phrasalSearch>
        <createContexts>true</createContexts>
        <maxContexts>3</maxContexts>
        <totalKwicLength>15</totalKwicLength>
        <!--NOTE: If phrasalSearch is set to TRUE, then
        maxContexts prop will be ignored-->
        <verbose>false</verbose>
        <stopwordsFile>../graves/utilities/english_stopwords.txt</stopwordsFile>
        <dictionaryFile>xsl/english_words.txt</dictionaryFile>
    </params>
    
    <rules>
        <rule xpath="div[@id=('navbar','header','footer')]" weight="0"/>
        <rule xpath="ul[@class='topicIndex']" weight="0"/>
    </rules>
    
    <!--<contexts>
       
    </contexts>-->
</config>
