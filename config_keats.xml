<?xml version="1.0" encoding="UTF-8"?>
<config xmlns="http://hcmc.uvic.ca/ns/staticSearch">
   <params>
      <baseDir>.</baseDir>
      <collectionDir>keats</collectionDir>
      <tempDir>keats_temp</tempDir>
      <outDir>site/js/</outDir>
      <recurse>false</recurse>
      <!--NOTE: If NGRAMS is set to TRUE, then
        maxContents prop will be ignored-->
      <phrasalSearch>true</phrasalSearch>
      <createContexts>true</createContexts>
      <maxContexts>1</maxContexts>
      <totalKwicLength>10</totalKwicLength>
      <kwicTruncateString>â€¦</kwicTruncateString>
      <verbose>false</verbose>
      <stopwordsFile>xsl/keats_stopwords.txt</stopwordsFile>
      <dictionaryFile>xsl/english_words.txt</dictionaryFile>
      <indentJSON>true</indentJSON>
   </params>
   
   <rules>
      <rule xpath="h4" weight="2"/>
      <rule xpath="nav" weight="0"/>
      <rule xpath="div[id='footer']" weight="0"/>
      <rule xpath="a[@href]" weight="2"/>
      <rule xpath="script" weight="0"/>
      <rule xpath="ul[@class='topicIndex']" weight="0"/>
      <rule xpath="div[@class='backMatter']/div[@class='poem']" weight="0"/>
   </rules>
   <!--<contexts>
      
   </contexts>-->
  
</config>
