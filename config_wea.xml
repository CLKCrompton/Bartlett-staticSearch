<?xml version="1.0" encoding="UTF-8"?>
<config xmlns="http://hcmc.uvic.ca/ns/staticSearch">
    <params>
        <baseDir>.</baseDir>
        <collectionDir>../wea/products/site</collectionDir>
        <tempDir>temp</tempDir>
        <outDir>site/js/</outDir>
        <recurse>false</recurse><!--NOTE: If phrasalSearch is set to TRUE, then
        maxContents prop will be ignored-->
        <phrasalSearch>true</phrasalSearch>
        <createContexts>true</createContexts>
        <maxContexts>3</maxContexts>
        <totalKwicLength>10</totalKwicLength>
        <kwicTruncateString>. . .</kwicTruncateString>
        <verbose>false</verbose>
        <stopwordsFile>xsl/english_stopwords.txt</stopwordsFile>
        <dictionaryFile>xsl/english_words.txt</dictionaryFile>
        <indentJSON>true</indentJSON>
    </params>
    
    <rules>
        <rule xpath="div[@id='info']" weight="0"/>
        <rule xpath="footer" weight="0"/>
        <rule xpath="div[@id='appendix']" weight="0"/>
        <rule xpath="div[@id='metadata']" weight="0"/>
        <rule xpath="*[contains(@class,'noteNum')]" weight="0"/>
        <rule xpath="header" weight="0"/>
        <rule xpath="*[matches(local-name(),'^h\d+$')]" weight="0"/>
        <rule xpath="a[span[@data-el='pb']]" weight="0"/>
        <rule xpath="div[@id='tools_container']" weight="0"/>
        <rule xpath="table[ancestor::div[@id='mainBody'][contains(@class,'docBornDigitalListing')]]" weight="0"/>
    </rules>
    
    <!--<contexts>
    </contexts>-->
</config>
