<?xml version="1.0" encoding="UTF-8"?>
<config xmlns="http://hcmc.uvic.ca/ns">
    <params>
        <baseDir>.</baseDir>
        <collectionDir>test</collectionDir>
        <recurse>false</recurse>
        <tempDir>temp</tempDir>
        <outDir>site/js/</outDir>
        <createContexts>true</createContexts>
        <totalKwicLength>15</totalKwicLength>
        <maxContexts>3</maxContexts>
        <!--NOTE: If NGRAMS is set to TRUE, then
        maxContents prop will be ignored-->
        <phrasalSearch>true</phrasalSearch>
        <verbose>TRUe</verbose>
        <stopwordsFile>xsl/english_stopwords.txt</stopwordsFile>
        <dictionaryFile>xsl/english_words.txt</dictionaryFile>
        <replacementsFile>xsl/replacements.txt</replacementsFile>
    </params>
    
    <rules>
        <rule xpath="*[matches(@class,'(^|\s)toponym(\s|$)')]" weight="2"/>
        <rule xpath="abbr[parent::span/span[@class='expan']]" weight="0"/>
        <rule xpath="body[not(ancestor::html/@id ='foreign')]" weight="0"/>
    </rules>
    
    <contexts>
        <rule xpath="*[@class='ed_note']"/>
        <rule xpath="div[@class='not_context']" context="false"/>
    </contexts>
</config>
